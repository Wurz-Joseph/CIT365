@page
@model MyScriptureJournal.IndexModel

@{
    ViewData["Title"] = "Scriptures";
}

<h1>Scriptures</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>

<form asp-page="./Index" method="get">
        <p>
            <select asp-for="SelectedBook" asp-items="Model.BooksFilter">
                <option value="">All</option>
            </select>
            Search Notes:
            <input type="text" name="SearchString" value="@Model.CurrentFilter" />
            <input type="submit" value="Filter" class="btn btn-primary" /> |
            <a asp-page="./Index">Back to full List</a>
        </p>
</form>

<table class="table" style="font-size: 2rem;">
    <thead>
        <tr>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.BookSort">
                    @Html.DisplayNameFor(model => model.Scriptures[0].Book)
                </a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Chapter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Verse)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Scriptures[0].Note)
            </th>
            <th>
                <a asp-page="./Index" asp-route-sortOrder="@Model.DateSort">
                    @Html.DisplayNameFor(model => model.Scriptures[0].DateCreated)
                </a>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Scriptures) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Book)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Chapter)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Verse)
            </td>
            <td style="font-family: 'Amatic SC'; font-weight: 800;">
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
